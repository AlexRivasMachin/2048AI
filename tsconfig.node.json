{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ],
          "@base/*": [
              "src/*"
          ],
          "@api/*": [
              "src/api/*"
          ]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*"
  ]
}